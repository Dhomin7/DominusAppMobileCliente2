<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="DominusApp.view.UsuarioFragment"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            style="@style/textView"/>
        <TextView
            android:id="@+id/tvNomeUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@null"
            android:layout_marginTop="10dp"
            style="@style/textView3"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            style="@style/textView"/>
        <TextView
            android:id="@+id/tvEmailUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@null"
            android:layout_marginTop="10dp"
            style="@style/textView3"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="EndereÃ§o"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            style="@style/textView"/>
        <TextView
            android:id="@+id/tvEnderecoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@null"
            android:layout_marginTop="10dp"
            style="@style/textView3"/>


    </LinearLayout>
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"></ImageView>
</LinearLayout>